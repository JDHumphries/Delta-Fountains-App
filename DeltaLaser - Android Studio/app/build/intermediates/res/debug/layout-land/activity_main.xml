<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAE4F0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.deltafountains.MainActivity" >

    <ImageButton
        android:id="@+id/questionImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#BAE4F0"
        android:src="@drawable/question_mark" />

    <Button
        android:id="@+id/controlsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue_beam"
        android:text="@string/controls"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/questionImageButton"
        android:layout_alignLeft="@+id/functionsButton"
        android:layout_alignStart="@+id/functionsButton"
        android:layout_marginBottom="20dp"
        android:background="@drawable/blue_beam"
        android:text="@string/settings"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/functionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingsButton"
        android:layout_alignLeft="@+id/controlsButton"
        android:layout_alignStart="@+id/controlsButton"
        android:layout_marginBottom="37dp"
        android:background="@drawable/blue_beam"
        android:text="@string/functions"
        android:textColor="#FFFFFF" />
        
</RelativeLayout>
